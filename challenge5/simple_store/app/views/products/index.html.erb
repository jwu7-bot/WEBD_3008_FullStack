<h1>All Products</h1>

<ul>
  <% @products.each do |product| %>
  <li>
    <strong><%= link_to product.title, product_path(product) %></strong><br>
    Description: <%= product.description %><br>
    Price: <%= number_to_currency(product.price) %><br>
    Stock_quantity: <%= product.stock_quantity %><br>
    Category: <%= product.category.name if product.category %><br>
  </li>
  <hr>
  <% end %>
</ul>